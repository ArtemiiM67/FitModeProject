:root {
    --bg-color: #0a0a0a;
    --card-bg: #161616;
    --text-primary: #ffffff;
    --text-secondary: #a0a0a0;
    --accent-gold: #D4AF37;
    --accent-gold-dim: #aa8c2c;
    --danger: #ff4d4d;
    --success: #4caf50;
    --font-main: 'Neue Haas Grotesk Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    --transition-speed: 0.3s;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background-color: var(--bg-color);
    color: var(--text-primary);
    font-family: var(--font-main);
    font-weight: 400;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
}

#app {
    width: 100%;
    max-width: 480px;
    height: 100%;
    position: relative;
    background-color: var(--bg-color);
    display: flex;
    flex-direction: column;
}

.view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-speed) ease;
    z-index: 0;
    overflow-y: auto;
}

.view.active {
    opacity: 1;
    pointer-events: all;
    z-index: 10;
}

.hidden {
    display: none;
}

/* Typography & Buttons */
h1,
h2,
h3 {
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
    letter-spacing: -0.5px;
}

.logo {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(to right, #fff, var(--accent-gold));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
}

.tagline {
    color: var(--text-secondary);
    text-align: center;
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 0.5px;
    animation: fadeIn 2s ease;
}

.btn {
    width: 100%;
    padding: 15px;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.1s, background-color 0.2s;
    margin-top: 10px;
}

.btn:active {
    transform: scale(0.98);
}

.btn-primary {
    background: linear-gradient(135deg, var(--accent-gold), var(--accent-gold-dim));
    color: #000;
}

.btn-secondary {
    background: transparent;
    border: 1px solid var(--text-secondary);
    color: var(--text-secondary);
}

.btn-accent {
    background-color: var(--accent-gold);
    color: black;
}

.btn-sm {
    padding: 8px 16px;
    font-size: 0.9rem;
    width: auto;
}

/* Loading View */
#loading-view {
    justify-content: center;
    align-items: center;
    background: black;
}

.logo-container {
    text-align: center;
}

/* Welcome View */
.content-center {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
}

.card-mockup {
    width: 280px;
    height: 160px;
    background: linear-gradient(135deg, #333, #111);
    border: 1px solid var(--accent-gold);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.2);
}

.card-slot {
    margin-top: 10px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--accent-gold);
    border: 1px dashed var(--accent-gold);
    padding: 5px 15px;
    border-radius: 20px;
}

/* Forms */
.form-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.input-group {
    margin-bottom: 20px;
}

.input-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

input,
select {
    width: 100%;
    padding: 12px;
    background-color: var(--card-bg);
    border: 1px solid #333;
    border-radius: 8px;
    color: white;
    font-size: 1rem;
    outline: none;
}

.input-row {
    display: flex;
    gap: 10px;
}

.input-row input {
    flex: 1;
}

/* Goal Selection */
.goal-buttons {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.goal-btn {
    background-color: var(--card-bg);
    border: 1px solid #333;
    border-radius: 16px;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
}

.goal-btn:hover {
    border-color: var(--accent-gold);
    transform: translateY(-2px);
}

.goal-icon {
    font-size: 2.5rem;
    color: var(--accent-gold);
    flex-shrink: 0;
}

.goal-text {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.goal-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-primary);
}

.goal-desc {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

/* Dashboard */
.dashboard-header {
    margin-bottom: 20px;
    margin-top: 10px;
}

.dashboard-header h3 {
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.macro-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 80px;
}

.macro-item {
    background-color: var(--card-bg);
    border-radius: 16px;
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 1px solid #222;
}

.circular-progress {
    position: relative;
    width: 80px;
    height: 80px;
    margin-bottom: 10px;
}

.circular-chart {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    max-height: 100%;
    transform: rotate(-90deg);
}

.circle-bg {
    fill: none;
    stroke: #333;
    stroke-width: 2.5;
}

.circle-fill {
    fill: none;
    stroke: var(--accent-gold);
    stroke-width: 2.5;
    stroke-linecap: round;
    transition: stroke-dashoffset 1s ease-out;
}

.macro-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.5rem;
    color: var(--text-secondary);
}

.macro-details {
    text-align: center;
}

.macro-label {
    display: block;
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 2px;
}

.macro-value {
    display: block;
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text-primary);
}

.bottom-nav {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70px;
    background-color: #111;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 1px solid #222;
}

.nav-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 0.9rem;
    cursor: pointer;
}

.nav-btn.active {
    color: var(--accent-gold);
    font-weight: 700;
}

/* Tracking */
.tracking-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
}

.btn-icon {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
}

.chat-interface {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
    overflow-y: auto;
    padding-bottom: 80px;
}

.message {
