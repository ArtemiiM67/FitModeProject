/* Light Mode */
body.light-mode {
    --bg-color: #f0f0f0;
    --card-bg: #ffffff;
    --text-primary: #1a1a1a;
    --text-secondary: #666666;
}

body.light-mode .circle-bg {
    stroke: #e0e0e0;
}

body.light-mode .setting-item {
    border-color: #d0d0d0;
}

body.light-mode .setting-item .ph-caret-right {
    color: #1a1a1a;
}

body.light-mode .toggle-slider {
    background-color: #d0d0d0;
}

body.light-mode .message.ai {
    background-color: #e8e8e8;
}

body.light-mode .bottom-nav {
    background-color: #ffffff;
    border-top-color: #d0d0d0;
}

body.light-mode input,
body.light-mode select {
    background-color: #ffffff;
    border-color: #d0d0d0;
    color: #1a1a1a;
}

body.light-mode .goal-btn {
    border-color: #d0d0d0;
}

body.light-mode .goal-btn:hover {
    border-color: var(--accent-gold);
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}